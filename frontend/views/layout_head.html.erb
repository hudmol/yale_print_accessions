<% if !AppConfig.has_key?(:yale_print_accessions) ||
      !AppConfig[:yale_print_accessions].has_key?(:repos) ||
      (current_repo && AppConfig[:yale_print_accessions][:repos].include?(current_repo['repo_code'])) %>

  <% if controller_name == 'accessions' && ['show', 'edit'].include?(action_name) %>
    <%= javascript_include_tag "#{AppConfig[:frontend_prefix]}assets/yale_print_accessions.js" %>
    <script>
      ACCESSION_ID = <%= @accession.id %>;
    </script>
  <% end %>

  <% if controller_name == 'accessions' && ['new', 'edit'].include?(action_name) %>
    <%= javascript_include_tag "#{AppConfig[:frontend_prefix]}assets/yale_simplified_accession_form.js" %>
  <% end %>

<% end %>
